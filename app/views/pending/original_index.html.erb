<div class="container-fluid pending-list">
  <div class="row">
  <% if is_section_head? %>
  <div class="col-sm-4">
	<h3><span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span> Pending</h3>
		<ul class="list-unstyled">
		<% @pending_objs_from_same_section.each do |objs| %>
			<% objs.each do |obj| %>
				<% if obj.class == AcMotor %>
					<li>
						<%= link_to polymorphic_path(obj)  do %> 
							<span class="glyphicon glyphicon-expand"></span>
						<% end %>
