    <%= @c_clip.reason %>
  </p><br />

<% if session[:user_role] == "Sectionhead" && @c_clip.uploader_role == "Normal" && @c_clip.release_status == "approved draft" && @c_clip.uploaded_by_section == session[:user_section] %> 

    <%= form_for(@c_clip) do |f| %>
        <% if @c_clip.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@c_clip.errors.count, "error") %> prohibited this c clip from being saved:</h2>

            <ul>
            <% @c_clip.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

          <div class="field">
              <%= f.label :Status? %><br />
              <%= f.text_field :release_status, :value => "released", :readonly => true %>
          </div>
          
          <br />

          <div class="actions">
            <%= f.submit 'Release C Clip', :name => 'create' %>
          </div>
      <% end %>
    <% end %>