  <% if session[:user_role] == "Sectionhead" && @cord.uploader_role == "Normal" && @cord.release_status == "approved draft" && @cord.uploaded_by_section == session[:user_section] %> 

    <%= form_for(@cord) do |f| %>
        <% if @cord.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@cord.errors.count, "error") %> prohibited this cord from being saved:</h2>

            <ul>
            <% @cord.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

          <div class="field">
              <%= f.label :Status? %><br />
              <%= f.text_field :release_status, :value => "released", :readonly => true %>
          </div>
          
          <br />

          <div class="actions">
            <%= f.submit 'Release Cord', :name => 'create' %>
          </div>
      <% end %>
