<div id="filterrific_results" %>
<div><%= page_entries_info cords %></div>

<table class="table table-hover">

  <tr class="active">
      <th class="text-center">Partnumber</th>
      <th class="text-center">Status</th>
      <th class="text-center">Description</th>
      <th class="text-center">Cord mat</th>
      <th class="text-center">Cord type</th>
      <th class="text-center">Plug type</th>
      <th class="text-center">Polarity</th>
      <th class="text-center">Cross sec</th>
      <th class="text-center">Cord od</th>
      <th class="text-center">Length</th>
      <th class="text-center">Dismantled length</th>
      <th class="text-center">Switch con</th>
      <th class="text-center">Drawing norm</th>
      <th class="text-center">Where used product</th>
      <th class="text-center">Where used plant</th>
      <th class="text-center">Cord spec</th>
      <th class="text-center">Remark</th>
      <th class="text-center">Reason</th>
      <th></th>
    </tr>


  <tbody>
    <% cords.each do |cord| %>
      <% if cord.release_status == "needs editing" && cord.uploader_name == session[:user_name] %>
        <tr class="danger">
      <% elsif cord.release_status == "pending" && session[:user_role] == "Sectionhead" && cord.uploader_role == "Normal" && cord.uploaded_by_section == session[:user_section] || session[:user_role] == "Departmenthead" && cord.uploader_role == "Sectionhead" && cord.release_status == "pending" %>
        <tr class="warning">
      <% elsif cord.release_status == "pending" || cord.release_status == "needs editing" %>
        <tr class="pending_parts">
      <% else %>
        <tr>
      <% end %>

        <td><%= link_to "#{cord.partnumber}", cord, method: :get %></td>
        <td><%= cord.release_status %></td>
        <td><%= cord.description %></td>
        <td><%= cord.cord_mat %></td>
        <td><%= cord.cord_type %></td>
        <td><%= cord.plug_type %></td>
        <td><%= cord.polarity %></td>
        <td><%= cord.cross_sec %></td>
        <td><%= cord.cord_od %></td>
        <td><%= cord.length %></td>
        <td><%= cord.dismantled_length %></td>
        <td><%= cord.switch_con %></td>
        <td><%= cord.drawing_norm %></td>
        <td><%= cord.where_used_product %></td>
        <td><%= cord.where_used_plant %></td>
        <td><%= cord.cord_spec %></td>
        <td><%= cord.remark %></td>
        <td><%= cord.reason %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate cords %>
</div>
