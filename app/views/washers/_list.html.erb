<div id="filterrific_results" %>
<div><%= page_entries_info washers %></div>

<table class="table table-hover">
  <tr class="active">
      <th class="text-center">Partnumber</th>
      <th class="text-center">Status</th>
      <th class="text-center">Description</th>
      <th class="text-center">Washer type</th>
      <th class="text-center">Inner diameter</th>
      <th class="text-center">Outer diameter</th>
      <th class="text-center">Thickness</th>
      <th class="text-center">Hardness</th>
      <th class="text-center">Coating</th>
      <th class="text-center">Material</th>
      <th class="text-center">Drawing number</th>
      <th class="text-center">Original Plant</th>
      <th class="text-center">Where used product</th>
      <th class="text-center">Where used plant</th>
      <th class="text-center">Remark</th>
      <th class="text-center">Reason</th>
    </tr>

  <tbody>
    <% washers.each do |washer| %>
      <% if washer.release_status == "needs editing" && washer.uploader_name == session[:user_name] %>
        <tr class="danger">
      <% elsif washer.release_status == "pending" && session[:user_role] == "Sectionhead" && washer.uploader_role == "Normal" && washer.uploaded_by_section == session[:user_section] || session[:user_role] == "Departmenthead" && washer.uploader_role == "Sectionhead" && washer.release_status == "pending" %>
        <tr class="warning">
      <% elsif washer.release_status == "pending" || washer.release_status == "needs editing" %>
        <tr class="pending_parts">
      <% else %>
        <tr>
      <% end %>
        <td><%= link_to "#{washer.partnumber}", washer, method: :get %></td>
        <td><%= washer.release_status %></td>
        <td><%= washer.description %></td>
        <td><%= washer.washer_type %></td>
        <td><%= washer.inner_diameter %></td>
        <td><%= washer.outer_diameter %></td>
        <td><%= washer.thickness %></td>
        <td><%= washer.hardness %></td>
        <td><%= washer.coating %></td>
        <td><%= washer.material %></td>
        <td><%= washer.drawing_number %></td>
        <td><%= washer.original_plant %></td>
        <td><%= washer.where_used_product %></td>
        <td><%= washer.where_used_plant %></td>
        <td><%= washer.remark %></td>
        <td><%= washer.reason %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate washers %>
</div>
