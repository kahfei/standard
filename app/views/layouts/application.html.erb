<!DOCTYPE html>
<html>
<head>
  <title>Standard Parts Library</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navmenu navmenu-default navmenu-fixed-left offcanvas-sm">
      	<div id="header">

        	<div id="headerimg">
        	<%= link_to(admin_path) do %>
  				<%= image_tag('bosch_logo.jpg') %>
			<% end %>
			</div>

    	</div>
	<% if session[:user_id] %>

		  <ul class="nav navmenu-nav">
		  	<li>
		  	  <div class="row login-user">
			  	  <%= link_to :controller => "sessions", :action => "change_details" do %>
			  	    <span class="glyphicon glyphicon-user"></span>
			  	    <%= session[:user_fullname]%>
			  	  <% end %>
	              <%= link_to logout_path, :method => :delete do %>
				    <span class="glyphicon glyphicon-log-out col-sm-offset-1"></span>
				  <% end %>
			  </div>
		  	</li>
			<% if session[:user_role] != "Superadmin" %>
			  <li><%= link_to "Pending parts", pending_index_path %></li>
			<% end %>
			<li><%= link_to "AC Motors", ac_motors_path %></li>
			<li><%= link_to "Anchor Logos", anchor_logos_path %></li>
			<li><%= link_to "Bearings", bearings_path %></li>
			<li><%= link_to "Plastic materials", plastic_materials_path %></li>
			<li><%= link_to "Screws", screws_path %></li>
			<li class="disabled"><%= link_to "Brush holders", brush_holders_path%></li>
			<li class="disabled"><%= link_to "C Clips", c_clips_path%></li>
			<li class="disabled"><%= link_to "Capacitors", capacitors_path%></li>
			<li class="disabled"><%= link_to "Carbon brushes", carbon_brushes_path%></li>
			<li class="disabled"><%= link_to "Connectors", connectors_path%></li>
			<li class="disabled"><%= link_to "Copperwires", copperwires_path%></li>
			<li class="disabled"><%= link_to "Cord clips", cord_clips_path%></li>
			<li class="disabled"><%= link_to "Cords", cords_path%></li>
			<li class="disabled"><%= link_to "Greases", greases_path%></li>
			<li class="disabled"><%= link_to "Grommets", grommets_path%></li>
			<li class="disabled"><%= link_to "Nuts", nuts_path%></li>
			<li class="disabled"><%= link_to "Spiral springs", spiral_springs_path%></li>
			<li class="disabled"><%= link_to "Springs", springs_path%></li>
			<li class="disabled"><%= link_to "Washers", washers_path%></li>
		    <% if session[:user_role] != "Normal" %>
			  <li><%= link_to "Users", users_path %></li>
		    <% end %>
		  </ul>

    <% end %><!-- if login -->
    </div><!-- navmenu navmenu-default navmenu-fixed-left offcanvas-sm -->
	<div class="navbar navbar-default navbar-fixed-top hidden-md hidden-lg">
      <button type="button" class="navbar-toggle" data-toggle="offcanvas" data-target=".navmenu">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Standard Part Library</a>
    </div>
    <div id="container">
	  <%= yield %>
	</div>

  

</body>
</html>