<br />
<h2>This part is waiting to get released!</h2>
<br />
  <p>
    <b>Partnumber:</b>
    <%= @connector.partnumber %>
  </p>

  <p>
    <b>Description:</b>
    <%= @connector.description %>
  </p>

  <p>
    <b>Connector type:</b>
    <%= @connector.connector_type %>
  </p>

  <p>
    <b>Drawing norm:</b>
    <%= @connector.drawing_norm %>
  </p>

  <p>
    <b>H X W:</b>
    <%= @connector.h_x_w %>
  </p>

  <p>
    <b>Supplier:</b>
    <%= @connector.supplier %>
  </p>

  <p>
    <b>Where used product:</b>
    <%= @connector.where_used_product %>
  </p><br />

    <p>
    <b>Where used plant:</b>
    <%= @connector.where_used_plant %>
  </p><br />

  <p>
    <b>Reason for submission:</b>
    <%= @connector.reason %>
  </p><br />

  <% if session[:user_role] == "Sectionhead" && @connector.uploader_role == "Normal" && @connector.release_status == "approved draft" && @connector.uploaded_by_section == session[:user_section] %> 

    <%= form_for(@connector) do |f| %>
        <% if @connector.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@connector.errors.count, "error") %> prohibited this connector from being saved:</h2>

            <ul>
            <% @connector.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

          <div class="field">
              <%= f.label :Status? %><br />
              <%= f.text_field :release_status, :value => "released", :readonly => true %>
          </div>
          
          <br />

          <div class="actions">
            <%= f.submit 'Release Connector', :name => 'create' %>
          </div>
      <% end %>
    <% end %>