<%= form_for(@plastic_material) do |f| %>
  <% if @plastic_material.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@plastic_material.errors.count, "error") %> prohibited this plastic_material from being saved:</h2>

      <ul>
      <% @plastic_material.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :partnumber %><br>
    <%= f.text_field :partnumber %>
  </div>
  <div class="field">
    <%= f.label :resin %><br>
    <%= f.text_field :resin %>
  </div>
  <div class="field">
    <%= f.label :color %><br>
    <%= f.text_field :color %>
  </div>
  <div class="field">
    <%= f.label :supplier %><br>
    <%= f.text_field :supplier %>
  </div>
  <div class="field">
    <%= f.label :recommendation %><br>
    <%= f.text_field :recommendation %>
  </div>
  <div class="field">
    <%= f.label :Ul_number %><br>
    <%= f.text_field :ul_number %>
  </div>
  <div class="field">
    <%= f.label :drawing_norm %><br>
    <%= f.text_field :drawing_norm %>
  </div>
  <div class="field">
    <%= f.label :where_used_product %><br>
    <%= f.text_field :where_used_product %>
  </div>
  <div class="field">
    <%= f.label :where_used_plant %><br>
    <%= f.text_field :where_used_plant %>
  </div>
  <div class="field">
    <%= f.label :supplier_material_info %><br>
    <%= f.text_field :supplier_material_info %>
  </div>
  <div class="field">
    <%= f.label :related_molders %><br>
    <%= f.text_field :related_molders %>
  </div>
  <br />
  <div class="field">
    <%= f.label :reason_for_submission? %><br />
    <%= f.text_field :reason %>
  </div>   
  <br />
  

  <% if session[:user_role] == "Normal" && @plastic_material.uploader_name == nil || session[:user_role] == "Sectionhead" && @plastic_material.uploader_name == nil %>
      <div class="field">
        <%= f.label :release_status %><br />
        <%= f.text_field :release_status, :value => "pending", :readonly => true %>
      </div>
  <% end %>
    
  <% if @plastic_material.uploader_name != session[:user_name] && session[:user_role] != "Superadmin" %>
    <div class="actions">
      <%= f.submit 'Submit Plastic material', :name => 'submit' %>
    </div>
  <% end %>

  <% if @plastic_material.uploader_name == session[:user_name] || session[:user_role] == "Superadmin" %>
    <div class="actions">
      <%= f.submit 'Update Plastic material', :name => 'create' %>
    </div>
  <% end %>
<% end %>
