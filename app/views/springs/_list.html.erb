<div id="filterrific_results" %>
<div><%= page_entries_info springs %></div>

<table class="table table-hover">
  <tr class="active">
      <th class="text-center">Partnumber</th>
      <th class="text-center">Status</th>
      <th class="text-center">Description</th>
      <th class="text-center">Spring type</th>
      <th class="text-center">Material dia</th>
      <th class="text-center">Mean dia</th>
      <th class="text-center">Free length</th>
      <th class="text-center">No of active coils</th>
      <th class="text-center">Solid length max</th>
      <th class="text-center">Dimension f1</th>
      <th class="text-center">Dimension l1</th>
      <th class="text-center">Dimension f2</th>
      <th class="text-center">Dimension l2</th>
      <th class="text-center">Initial load nm</th>
      <th class="text-center">Final load nm</th>
      <th class="text-center">Torque arm length</th>
      <th class="text-center">Hook length</th>
      <th class="text-center">Hook arc radius</th>
      <th class="text-center">Spring constant</th>
      <th class="text-center">Unit</th>
      <th class="text-center">Supplier</th>
      <th class="text-center">Drawing norm</th>
      <th class="text-center">Where used product</th>
      <th class="text-center">Where used plant</th>
      <th class="text-center">Remark</th>
      <th class="text-center">Reason</th>
    </tr>

  <tbody>
    <% springs.each do |spring| %>
      <% if spring.release_status == "needs editing" && spring.uploader_name == session[:user_name] %>
        <tr class="danger">
      <% elsif spring.release_status == "pending" && session[:user_role] == "Sectionhead" && spring.uploader_role == "Normal" && spring.uploaded_by_section == session[:user_section] || session[:user_role] == "Departmenthead" && spring.uploader_role == "Sectionhead" && spring.release_status == "pending" %>
        <tr class="warning">
      <% elsif spring.release_status == "pending" || spring.release_status == "needs editing" %>
        <tr class="pending_parts">
      <% else %>
        <tr>
      <% end %>
        <td><%= link_to "#{spring.partnumber}", spring, method: :get %></td>
        <td><%= spring.release_status %></td>
        <td><%= spring.description %></td>
        <td><%= spring.spring_type %></td>
        <td><%= spring.material_dia %></td>
        <td><%= spring.mean_dia %></td>
        <td><%= spring.free_length %></td>
        <td><%= spring.no_of_active_coils %></td>
        <td><%= spring.solid_length_max %></td>
        <td><%= spring.dimension_f1 %></td>
        <td><%= spring.dimension_l1 %></td>
        <td><%= spring.dimension_f2 %></td>
        <td><%= spring.dimension_l2 %></td>
        <td><%= spring.initial_load_nm %></td>
        <td><%= spring.final_load_nm %></td>
        <td><%= spring.torque_arm_length %></td>
        <td><%= spring.hook_length %></td>
        <td><%= spring.hook_arc_radius %></td>
        <td><%= spring.spring_constant %></td>
        <td><%= spring.unit %></td>
        <td><%= spring.supplier %></td>
        <td><%= spring.drawing_norm %></td>
        <td><%= spring.where_used_product %></td>
        <td><%= spring.where_used_plant %></td>
        <td><%= spring.remark %></td>
        <td><%= spring.reason %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate springs %>
</div>
