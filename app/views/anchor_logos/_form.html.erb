<%= form_for(@anchor_logo) do |f| %>
  <% if @anchor_logo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@anchor_logo.errors.count, "error") %> prohibited this anchor_logo from being saved:</h2>

      <ul>
      <% @anchor_logo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 
  <div class="field">
    <%= f.label :partnumber %><br />
    <%= f.text_field :partnumber %>
  </div>
  <div class="field">
    <%= f.label :anchor_logo_diameter %><br />
    <%= f.text_field :anchor_logo_diameter %>
  </div>
  <div class="field">
    <%= f.label :anchor_logo_supplier %><br />
    <%= f.text_field :anchor_logo_supplier %>
  </div>
  <div class="field">
    <%= f.label :housing_partnumber %><br />
    <%= f.text_field :housing_partnumber %>
  </div>
  <div class="field">
    <%= f.label :housing_supplier %><br />
    <%= f.text_field :housing_supplier %>
  </div>
   <div class="field">
    <%= f.label :bosch_logo_partnumber %><br />
    <%= f.text_field :bosch_logo_partnumber %>
  </div>
  <div class="field">
    <%= f.label :bosch_logo_supplier %><br />
    <%= f.text_field :bosch_logo_supplier %>
  </div>
  <div class="field">
    <%= f.label :where_used_product %><br />
    <%= f.text_field :where_used_product %>
  </div>
  <div class="field">
    <%= f.label :where_used_plant %><br />
    <%= f.text_field :where_used_plant %>
  </div>
  <br />
  <div class="field">
    <%= f.label :remark %><br />
    <%= f.text_field :remark %>
  </div>
  <br />
  <div class="field">
    <%= f.label :reason_for_submission? %><br />
    <%= f.text_field :reason %>
  </div>   
  <br />
  

  <% if session[:user_role] == "Normal" && @anchor_logo.uploader_name == nil || session[:user_role] == "Sectionhead" && @anchor_logo.uploader_name == nil %>
      <div class="field">
        <%= f.label :release_status %><br />
        <%= f.text_field :release_status, :value => "pending", :readonly => true %>
      </div>
  <% end %>
    
  <% if @anchor_logo.uploader_name != session[:user_name] && session[:user_role] != "Superadmin" %>
    <div class="actions">
      <%= f.submit 'Submit Anchor Logo', :name => 'submit' %>
    </div>
  <% end %>

  <% if @anchor_logo.uploader_name == session[:user_name] || session[:user_role] == "Superadmin" %>
    <div class="actions">
      <%= f.submit 'Update Anchor Logo', :name => 'create' %>
    </div>
  <% end %>
<% end %>