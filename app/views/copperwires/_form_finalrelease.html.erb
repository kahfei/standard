  <br />

  <p>
    <b>Reason for submission:</b>
    <%= @copperwire.reason %>
  </p><br />

  <% if session[:user_role] == "Sectionhead" && @copperwire.uploader_role == "Normal" && @copperwire.release_status == "approved draft" && @copperwire.uploaded_by_section == session[:user_section] %> 

    <%= form_for(@copperwire) do |f| %>
        <% if @copperwire.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@copperwire.errors.count, "error") %> prohibited this copperwire from being saved:</h2>

            <ul>
            <% @copperwire.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

          <div class="field">
              <%= f.label :Status? %><br />
              <%= f.text_field :release_status, :value => "released", :readonly => true %>
          </div>
          
          <br />

          <div class="actions">
            <%= f.submit 'Release Copperwire', :name => 'create' %>
          </div>
      <% end %>
    <% end %>