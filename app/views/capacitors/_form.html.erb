<%= form_for(@capacitor) do |f| %>
  <% if @capacitor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@capacitor.errors.count, "error") %> prohibited this capacitor from being saved:</h2>

      <ul>
      <% @capacitor.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :partnumber %><br />
    <%= f.text_field :partnumber %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :capacitor_type %><br />
    <%= f.text_field :capacitor_type %>
  </div>
  <div class="field">
    <%= f.label :capacity %><br />
    <%= f.text_field :capacity %>
  </div>
  <div class="field">
    <%= f.label :feet %><br />
    <%= f.text_field :feet %>
  </div>
  <div class="field">
    <%= f.label :capacitor_class %><br />
    <%= f.text_field :capacitor_class %>
  </div>
  <div class="field">
    <%= f.label :drawing_norm %><br />
    <%= f.text_field :drawing_norm %>
  </div>
  <div class="field">
    <%= f.label :where_used_product %><br />
    <%= f.text_field :where_used_product %>
  </div>
  <div class="field">
    <%= f.label :where_used_plant %><br />
    <%= f.text_field :where_used_plant %>
  </div>
  <div class="field">
    <%= f.label :remark %><br />
    <%= f.text_field :remark %>
  </div>
  <br />
  <div class="field">
    <%= f.label :reason_for_submission? %><br />
    <%= f.text_field :reason %>
  </div>   
  <br />
  

  <% if session[:user_role] == "Normal" && @capacitor.uploader_name == nil || session[:user_role] == "Sectionhead" && @capacitor.uploader_name == nil %>
      <div class="field">
        <%= f.label :release_status %><br />
        <%= f.text_field :release_status, :value => "pending", :readonly => true %>
      </div>
  <% end %>
    
  <% if @capacitor.uploader_name != session[:user_name] && session[:user_role] != "Superadmin" %>
    <div class="actions">
      <%= f.submit 'Submit Capacitor', :name => 'submit' %>
    </div>
  <% end %>

  <% if @capacitor.uploader_name == session[:user_name] || session[:user_role] == "Superadmin" %>
    <div class="actions">
      <%= f.submit 'Update Capacitor', :name => 'create' %>
    </div>
  <% end %>
<% end %>